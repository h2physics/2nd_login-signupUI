<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.h2physics.loginui.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/bg">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/label_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView_label_in_labelLayout"
            android:text="@string/label_name"
            android:textSize="70sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="30%"
            android:layout_centerHorizontal="true"/>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/option_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentBottom="true"
            android:visibility="visible">

            <Button
                android:id="@+id/button_startSignIn"
                android:text="@string/sign_in"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_view"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/button_startSignUp"
                android:text="@string/sign_up"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_view"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:text="@string/or"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/signIn_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView_label_in_signInLayout"
            android:text="@string/label_name"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="8%"/>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_marginTopPercent="25%">

            <EditText
                android:id="@+id/editText_username"
                android:hint="@string/username"
                android:textColorHint="@color/colorBlack"
                android:singleLine="true"
                android:background="@drawable/border_bottom_view"
                app:layout_widthPercent="70%"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/editText_password"
                android:hint="@string/password"
                android:textColorHint="@color/colorBlack"
                android:singleLine="true"
                android:background="@drawable/border_bottom_view"
                app:layout_widthPercent="70%"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editText_username"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/button_signIn"
                android:text="@string/sign_in"
                android:layout_height="50dp"
                android:layout_width="120dp"
                android:background="@drawable/rounded_view"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editText_password"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textView_signIn"
                android:text="@string/no_account"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/signUp_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView_label_in_signUpLayout"
            android:text="@string/label_name"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="8%"/>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_marginTopPercent="25%">

            <EditText
                android:id="@+id/editText_signUp_email"
                android:hint="@string/email"
                android:textColorHint="@color/colorBlack"
                android:singleLine="true"
                android:background="@drawable/border_bottom_view"
                app:layout_widthPercent="70%"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/editText_signUp_username"
                android:hint="@string/username"
                android:textColorHint="@color/colorBlack"
                android:singleLine="true"
                android:background="@drawable/border_bottom_view"
                app:layout_widthPercent="70%"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editText_signUp_email"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editText_signUp_password"
                android:hint="@string/password"
                android:textColorHint="@color/colorBlack"
                android:singleLine="true"
                android:background="@drawable/border_bottom_view"
                app:layout_widthPercent="70%"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editText_signUp_username"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/button_signUp"
                android:text="@string/sign_up"
                android:layout_height="50dp"
                android:layout_width="120dp"
                android:background="@drawable/rounded_view"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editText_signUp_password"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textView_signUp"
                android:text="@string/have_account"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>
